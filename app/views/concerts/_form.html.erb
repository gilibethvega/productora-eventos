<%= form_with(model: [@group, concert], local: true) do |form| %>
  <% if concert.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(concert.errors.count, "error") %> prohibited this concert from being saved:</h2>

      <ul>
      <% concert.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date, 'Fecha' %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :duration, 'Duración en horas' %>
    <%= form.number_field :duration %>
  </div>

  <div class="field">
    <%= form.label :assistance %>
    <%= form.number_field :assistance %>
  </div>

  <div class="field">
    <%= form.label :place %>
    <%= form.text_field :place %>
  </div>

  <div class="field">
    <%= form.label :group %>
    <%= form.select :group_id, @groups.map{ |group| [group.name, group.id]}, prompt: "Seleccione una opción"  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
